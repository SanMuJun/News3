<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"


android:background="@android:color/holo_blue_bright"
android:layout_width="match_parent"
android:layout_height="60dp">
<TextView
    android:id="@+id/tv_title"
    android:text="我是标题"
    android:textSize="25sp"
    android:textColor="@android:color/black"
    android:layout_centerInParent="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />

<ImageButton
    android:visibility="gone"
    android:id="@+id/ib_menu"
    android:src="@drawable/img_menu"
    android:background="@android:color/transparent"
    android:layout_centerVertical="true"
    android:layout_marginLeft="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />


    <ImageButton
        android:visibility="gone"
        android:id="@+id/ib_back"
        android:src="@drawable/back"
        android:background="@android:color/transparent"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageButton
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:visibility="gone"
        android:id="@+id/ib_textsize"
        android:src="@drawable/icon_textsize"
        android:background="@android:color/transparent"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <ImageButton
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:visibility="gone"
        android:id="@+id/ib_share"
        android:src="@drawable/icon_share"
        android:background="@android:color/transparent"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <ImageButton
        android:id="@+id/ib_swich_list_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:background="@android:color/transparent"
        android:src="@drawable/icon_pic_grid_type"
        android:visibility="gone" />

    <!--<Button-->
        <!--android:id="@+id/btn_cart"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:layout_marginRight="8dp"-->
        <!--android:background="@drawable/btn_cart_selector"-->
        <!--android:text="编辑"-->
        <!--android:textColor="@android:color/white"-->
        <!--android:visibility="gone" />-->

    <Button
        android:id="@+id/btn_cart"
        android:text="编辑"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@drawable/button_red_normal"
        android:textColor="@android:color/white"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_height="wrap_content" />




</RelativeLayout>